<div class="header-right">
    <div class="container">
        {#% if (app.user) %}
            <div class="btn-group">
                <a class="btn btn-info dropdown-toggle btn-mini" data-toggle="dropdown" href="#">
                    <i class="icon-user"></i> {{ app.user.username }}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu pull-right">
                    <li><a href="#"><i class="icon-user"></i>Profile</a></li>
                    <li><a href="#"><i class="icon-cog"></i>Settings</a></li>
                    <li class="divider"></li>
                    <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-off"></i>Logout</a></li>
                </ul>
            </div>
        {% else %}
            <div class="btn-group">
                <a class="btn btn-info dropdown-toggle btn-mini" data-toggle="dropdown" href="#">
                    <i class="icon-user"></i> {{ 'Login'|trans({}, 'DMDFrontBundle') }}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu pull-right">
                    <li>
                        <form class="form-inline" method="post" action="{{ path('fos_user_security_check') }}">

                            <fieldset>
                                <div class="clearfix">
                                    <dt id="username-label"><label for="username" class="required">Username:</label></dt>
                                    <dd id="username-element">
                                        <input id="username" class="input-small" type="text" required="required" name="_username" value="{ last_username }" />
                                    </dd> 
                                </div>
                                <div class="clearfix">
                                    <dt id="password-label"><label for="password" class="required">Password:</label></dt>
                                    <dd id="password-element">
                                        <input id="password" class="input-small" type="password" required="required" name="_password" />
                                    </dd> 
                                </div>
                                <div class="clearfix">
                                    <input type="submit" value="Login" class="btn btn-info btn-small" />
                                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'login.label.forgot_password'|trans() }}</a>
                                </div>
                            </fieldset>
                        </form>
                    </li>
                </ul>
            </div>
        {% endif %#}
        <div class="header-nav">
            <a class="contact-info" href="{{ url('dmd_front_contact') }}">{{ 'contact.label.header' | trans() }}</a>
        </div>
    </div>
</div>